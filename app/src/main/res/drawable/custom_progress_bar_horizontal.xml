<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>


        <shape  android:shape="rectangle">
            <stroke android:width="4px" android:color="@color/color_ProgressTimer_border" />
            <corners android:radius="16dp" />
        </shape>

   </item>

    <item>

        <clip>
            <shape  android:shape="rectangle">
                <stroke android:width="4px" android:color="@color/color_ProgressTimer_border" />
                <corners android:radius="16dp" />
                <gradient android:angle="45"
                    android:endColor="@color/color_ProgressTimer_end"
                    android:startColor="@color/color_ProgressTimer_start" />
                <padding android:left="4dp"
                    android:right="4dp"
                    android:top="4dp"
                    android:bottom="4dp"
                    />
            </shape>
        </clip>
    </item>

</layer-list>